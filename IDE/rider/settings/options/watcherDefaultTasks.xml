<application>
  <component name="ApplicationTasksOptions">
    <global-watchers>
      <TaskOptions>
        <option name="arguments" value="$FileName$ -o $FileNameWithoutExtension$.min.js -c -m" />
        <option name="checkSyntaxErrors" value="true" />
        <option name="description" />
        <option name="exitCodeBehavior" value="ERROR" />
        <option name="fileExtension" value="js" />
        <option name="immediateSync" value="true" />
        <option name="name" value="terser compressor js" />
        <option name="output" value="$FileNameWithoutExtension$.min.js" />
        <option name="outputFilters">
          <array />
        </option>
        <option name="outputFromStdout" value="false" />
        <option name="program" value="terser" />
        <option name="runOnExternalChanges" value="true" />
        <option name="scopeName" value="All Places" />
        <option name="trackOnlyRoot" value="false" />
        <option name="workingDir" value="$FileDir$" />
        <envs />
      </TaskOptions>
    </global-watchers>
  </component>
</application>